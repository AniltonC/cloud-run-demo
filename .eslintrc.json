{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"google"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"max-len": [
			"error",
			140
		],
		"new-cap": "off",
		"require-jsdoc": "off",
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off",
		"no-invalid-this": "off",
		"no-console": [
			"error",
			{
				"allow": [
					"error",
					"warn",
					"info"
				]
			}
		],
		"object-curly-spacing": ["error", "always"]
	}
}